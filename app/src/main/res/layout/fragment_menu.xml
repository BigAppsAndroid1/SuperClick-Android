<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:layoutDirection="rtl"
    tools:alpha="1"
    tools:ignore="ContentDescription,HardcodedText">

    <View
        android:id="@+id/menu_dim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="#66AAAAAA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/menu_guide_vert_07"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:alpha="1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_guide_vert_07"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <View
        android:id="@+id/menu_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:paddingStart="40dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/menu_user_phone"
        app:layout_constraintEnd_toStartOf="@id/menu_user_edit"
        app:layout_constraintStart_toStartOf="@id/menu_user_phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/menu_user_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:lines="1"
        android:paddingStart="40dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/menu_guide_hori_02"
        app:layout_constraintEnd_toEndOf="@id/menu_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_user_name"
        tools:text="@tools:sample/us_phones" />

    <ImageView
        android:id="@+id/menu_user_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/pencil"
        app:layout_constraintBottom_toBottomOf="@id/menu_user_phone"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintTop_toTopOf="@id/menu_user_name" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_guide_hori_02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <View
        android:id="@+id/menu_separator_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="32dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/menu_guide_hori_02"
        app:layout_constraintEnd_toEndOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/menu_guide_hori_02" />

    <TextView
        android:id="@+id/menu_orders_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/my_orders"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/menu_contact_shop"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_guide_hori_02" />

    <TextView
        android:id="@+id/menu_contact_shop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/contact"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/menu_guide_hori_04"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_orders_history" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_guide_hori_04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <View
        android:id="@+id/menu_separator_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="32dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/menu_guide_hori_04"
        app:layout_constraintEnd_toEndOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/menu_guide_hori_04" />

    <TextView
        android:id="@+id/menu_about_shop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:autoSizeMaxTextSize="22sp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/menu_about_us"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_guide_hori_04"
        app:layout_constraintVertical_bias="1"
        tools:text="@string/menu_about_shop" />

    <TextView
        android:id="@+id/menu_about_us"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/about_title"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/menu_guide_hori_06"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_about_shop" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_guide_hori_06"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <View
        android:id="@+id/menu_separator_3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="32dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/menu_guide_hori_06"
        app:layout_constraintEnd_toEndOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/menu_guide_hori_06" />

    <TextView
        android:id="@+id/menu_regulations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/regulations_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/menu_return_policy"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_guide_hori_06" />

    <TextView
        android:id="@+id/menu_return_policy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/returns_policy_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/menu_privacy_policy"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_regulations" />

    <TextView
        android:id="@+id/menu_privacy_policy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/privacy_policy_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/menu_guide_hori_08"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_return_policy" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_guide_hori_08"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <TextView
        android:id="@+id/menu_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="התנתק"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/menu_separator_4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="32dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/menu_guide_hori_08"
        app:layout_constraintEnd_toEndOf="@id/menu_guide_vert_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/menu_guide_hori_08" />

    <TextView
        android:id="@+id/menu_accessibility"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="נגישות"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menu_guide_vert_07"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_guide_hori_08"
        app:layout_constraintVertical_bias="0"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>