<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:background="@drawable/bg_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <il.co.superclick.widgets.MenuBar
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bar_height"/>

    <TextView
        android:id="@+id/edit_meal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="12dp"
        android:gravity="center"
        android:textSize="14sp"
        android:autoSizeMaxTextSize="22dp"
        android:autoSizeMinTextSize="12dp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"
        android:fontFamily="@font/heebo_medium"
        tools:text="חחחחחחחחחחחחחח שתי פיצות משפחתיות + 2 בקבוקים + קינוח יחשגחישג שדגש שד"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/edit_meal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <il.co.superclick.meal.MealEditList
            android:id="@+id/edit_meal_recycler_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            />

    </androidx.core.widget.NestedScrollView>

</LinearLayout>