<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    tools:layoutDirection="rtl"
    tools:layout_height="100dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_cart_guide_04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_cart_guide_06"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <il.co.superclick.widgets.AmountWidget
        android:id="@+id/item_cart_edit_amount1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_cart_guide_04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <il.co.superclick.widgets.UnitTypeWidget
        android:id="@+id/item_cart_edit_unit_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_cart_guide_06"
        app:layout_constraintStart_toEndOf="@id/item_cart_guide_04"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_cart_edit_finish_button"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/rect_border_accent_corners_16"
        android:gravity="center"
        android:paddingStart="0dp"
        android:paddingEnd="12dp"
        android:visibility="invisible"
        android:text="@string/item_cart_edit_submit"
        app:drawableStartCompat="@drawable/pencil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_cart_delete_button"
        app:layout_constraintStart_toEndOf="@id/item_cart_guide_06"
        app:layout_constraintTop_toTopOf="parent" />

