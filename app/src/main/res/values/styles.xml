<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="android:fontFamily">@font/heebo_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_shadow_</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">8dp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="EditText.White">
        <!--<item name="android:bg_1">@drawable/rect_white_corners_8</item>
        <item name="android:elevation">4dp</item>-->
    </style>

    <style name="EditText.CreditCard">
        <item name="android:background">@drawable/rect_grey_corners_2</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Button" parent="android:Widget.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_accent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonProduct" parent="android:Widget.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_accent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Button.White">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.GrayWithBlueText">
        <item name="android:background">@drawable/button_transparent_with_black_border</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button.GrayWithGrayText">
        <item name="android:background">@drawable/button_transparent_with_black_border</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyLight</item>
    </style>

    <style name="Button.BlueWithBlueText">
        <item name="android:background">@drawable/button_transparent_with_blue_border</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Separator">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="Separator.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="SwitchBar.Button" parent="">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/categories_bar_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="line">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
    </style>

    <style name="SpinnerItem" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">right|center</item>
        <item name="android:textSize">5sp</item>
    </style>

</resources>
